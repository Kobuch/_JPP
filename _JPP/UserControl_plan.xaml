<Window x:Class="_JPP.UserControl_plan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_JPP"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">



    <Grid  x:Name="Grid1"  SelectiveScrollingGrid.SelectiveScrollingOrientation="Both">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Horizontal" Grid.ColumnSpan="2" Grid.RowSpan="2">

        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="BT_wklej" Content="Wklej ze schowka" Width="150" Height="25" Margin="3" Click="wklej_Click"/>
            <Button x:Name="BT_scal" Content="Scal te same Rifu" Width="150" Height="25" Margin="3" Click="scal_Click"/>
            <Button x:Name="BT_dopasuj" Content="Dopasuj" Width="150" Height="25" Margin="3" Click="dopasuj_Click"/>



        </StackPanel>

        <DataGrid Grid.Row="2"  x:Name="Grid_plan" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Top"  />

    </Grid>
</Window>
